@model CreateBannerDto
@{
    ViewData["Title"] = "Yeni Banner Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>Görsel Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <button href="Banner/Index" class="btn btn-outline-dark">Geri</button>
    <button class="btn btn-outline-success">Kaydet</button>
</form>

